<%- include('partials/header') %>

  <div class="flex items-center justify-center min-h-screen bg-gradient-to-r from-green-100 to-green-300">
    <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md relative">
      <!-- <button type="button" class="absolute top-4 right-4 text-gray-500 hover:text-gray-700">
        <a href=""><span aria-hidden="true">&times;</span></a>
      </button> -->

      <div class="text-center">
        <h2 class="text-2xl font-semibold text-gray-800 mb-6">Sign Up</h2>
        <form action="/register" method="post" class="space-y-6">

          <div class="relative">
            <label for="first-name" class="block text-sm font-medium text-gray-600 text-start">First Name</label>
            <input type="text" name="username" id="first-name" required
              class="mt-1 w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-400 focus:border-transparent">
          </div>

          <div class="relative">
            <label for="email" class="block text-sm font-medium text-gray-600 text-start">Email</label>
            <input type="email" name="email" id="email" required
              class="mt-1 w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-400 focus:border-transparent">
          </div>

          <div class="relative">
            <label for="password" class="block text-sm font-medium text-gray-600 text-start">Password</label>
            <input type="password" name="password" id="password" required minlength="8"
              class="mt-1 w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-400 focus:border-transparent">
          </div>

          <div class="flex items-center text-sm">
            <label class="flex items-center text-gray-600"><input type="checkbox"
                class="h-4 w-4 text-green-600 focus:ring-green-500 border-gray-300 rounded"> I agree to the terms and
              conditions</label>
          </div>

          <div>
            <button type="submit"
              class="w-full py-2 bg-pigment-green text-white font-semibold rounded-md hover:bg-green focus:outline-none focus:ring-2 focus:ring-green focus:ring-opacity-50">
              <i class="fa-solid fa-arrow-right"></i>
            </button>
          </div>

        </form>

        <div class="mt-6 text-sm">
          <p class="text-gray-600">Already have an account? <a href="/login"
              class="text-green-600 hover:underline">Login</a></p>
        </div>
      </div>
    </div>
  </div>

  <script src="/app.js"></script>

  <%- include('partials/footer') %>
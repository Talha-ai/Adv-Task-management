<%- include('partials/header')%>

  <div class="mx-16 sm:px-4 light-style flex-grow-1 container-p-y">
    <h4 class="font-bold text-2xl pb-3 mb-4">
      Account settings
    </h4>
    <div
      class="relative flex flex-col min-w-0 rounded break-words border bg-white border-1 border-gray-300 overflow-hidden">
      <div class="flex flex-wrap  no-gutters row-bordered row-border-light">
        <div class="md:w-1/4 pr-4 pl-4 pt-0">
          <div class="flex flex-col pl-0 mb-0 rounded border-gray-300  account-settings-links">
            <a class="relative block py-3 px-6 -mb-px  border-gray-300 no-underline w-fill hover:bg-gray-100 active"
              data-toggle="list" href="#account-general">General</a>
            <a class="relative block py-3 px-6 -mb-px  border-gray-300 no-underline w-fill hover:bg-gray-100"
              data-toggle="list" href="#account-change-password">Change
              password</a>
            <a class="relative block py-3 px-6 -mb-px  border-gray-300 no-underline w-fill hover:bg-gray-100"
              data-toggle="list" href="#account-info">Info</a>
            <a class="relative block py-3 px-6 -mb-px  border-gray-300 no-underline w-fill hover:bg-gray-100"
              data-toggle="list" href="#account-social-links">Social
              links</a>
            <a class="relative block py-3 px-6 -mb-px  border-gray-300 no-underline w-fill hover:bg-gray-100"
              data-toggle="list" href="#account-connections">Connections</a>
            <a class="relative block py-3 px-6 -mb-px  border-gray-300 no-underline w-fill hover:bg-gray-100"
              data-toggle="list" href="#account-notifications">Notifications</a>
          </div>
        </div>
        <div class="md:w-3/4 pr-4 pl-4">
          <div class="tab-content">
            <div class="tab-pane opacity-0 active opacity-100 block" id="account-general">
              <div class="flex-auto p-6 flex items-start items-center">
                <img src="https://bootdey.com/img/Content/avatar/avatar1.png" alt class="block ui-w-80">
                <div class="flex-1 ml-4">
                  <label
                    class="inline-block align-middle text-center select-none border font-normal whitespace-no-wrap rounded py-1 px-3 leading-normal no-underline text-blue-600 border-blue-600 hover:bg-blue-600 hover:text-white bg-white hover:bg-blue-600">
                    Upload new photo
                    <input type="file" class="account-settings-fileinput">
                  </label> &nbsp;
                  <button type="button"
                    class="inline-block align-middle text-center select-none border font-normal whitespace-no-wrap rounded py-1 px-3 leading-normal no-underline btn-default md-btn-flat">Reset</button>
                  <div class="text-gray-100 text-xs mt-1">Allowed JPG, GIF or PNG. Max size of 800K</div>
                </div>
              </div>
              <hr class="border-gray-100 m-0">
              <div class="flex-auto p-6">
                <div class="mb-4">
                  <label class="form-label">Username</label>
                  <input type="text"
                    class="block appearance-none w-full py-1 px-2 mb-1 text-base leading-normal bg-white text-gray-800 border border-gray-200 rounded mb-1"
                    value="nmaxwell">
                </div>
                <div class="mb-4">
                  <label class="form-label">Name</label>
                  <input type="text"
                    class="block appearance-none w-full py-1 px-2 mb-1 text-base leading-normal bg-white text-gray-800 border border-gray-200 rounded"
                    value="Nelle Maxwell">
                </div>
                <div class="mb-4">
                  <label class="form-label">E-mail</label>
                  <input type="text"
                    class="block appearance-none w-full py-1 px-2 mb-1 text-base leading-normal bg-white text-gray-800 border border-gray-200 rounded mb-1"
                    value="nmaxwell@mail.com">
                  <div
                    class="relative px-3 py-3 mb-4 border rounded bg-orange-200 border-orange-300 text-orange-800 mt-3">
                    Your email is not confirmed. Please check your inbox.<br>
                    <a href="javascript:void(0)">Resend confirmation</a>
                  </div>
                </div>
                <div class="mb-4">
                  <label class="form-label">Company</label>
                  <input type="text"
                    class="block appearance-none w-full py-1 px-2 mb-1 text-base leading-normal bg-white text-gray-800 border border-gray-200 rounded"
                    value="Company Ltd.">
                </div>
              </div>
            </div>
            <div class="tab-pane opacity-0" id="account-change-password">
              <div class="flex-auto p-6 pb-2">
                <div class="mb-4">
                  <label class="form-label">Current password</label>
                  <input type="password"
                    class="block appearance-none w-full py-1 px-2 mb-1 text-base leading-normal bg-white text-gray-800 border border-gray-200 rounded">
                </div>
                <div class="mb-4">
                  <label class="form-label">New password</label>
                  <input type="password"
                    class="block appearance-none w-full py-1 px-2 mb-1 text-base leading-normal bg-white text-gray-800 border border-gray-200 rounded">
                </div>
                <div class="mb-4">
                  <label class="form-label">Repeat new password</label>
                  <input type="password"
                    class="block appearance-none w-full py-1 px-2 mb-1 text-base leading-normal bg-white text-gray-800 border border-gray-200 rounded">
                </div>
              </div>
            </div>
            <div class="tab-pane opacity-0" id="account-info">
              <div class="flex-auto p-6 pb-2">
                <div class="mb-4">
                  <label class="form-label">Bio</label>
                  <textarea
                    class="block appearance-none w-full py-1 px-2 mb-1 text-base leading-normal bg-white text-gray-800 border border-gray-200 rounded"
                    rows="5">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Mauris nunc arcu, dignissim sit amet sollicitudin iaculis, vehicula id urna. Sed luctus urna nunc. Donec fermentum, magna sit amet rutrum pretium, turpis dolor molestie diam, ut lacinia diam risus eleifend sapien. Curabitur ac nibh nulla. Maecenas nec augue placerat, viverra tellus non, pulvinar risus.</textarea>
                </div>
                <div class="mb-4">
                  <label class="form-label">Birthday</label>
                  <input type="text"
                    class="block appearance-none w-full py-1 px-2 mb-1 text-base leading-normal bg-white text-gray-800 border border-gray-200 rounded"
                    value="May 3, 1995">
                </div>
                <div class="mb-4">
                  <label class="form-label">Country</label>
                  <select class="custom-select">
                    <option>USA</option>
                    <option selected>Canada</option>
                    <option>UK</option>
                    <option>Germany</option>
                    <option>France</option>
                  </select>
                </div>
              </div>
              <hr class="border-gray-100 m-0">
              <div class="flex-auto p-6 pb-2">
                <h6 class="mb-4">Contacts</h6>
                <div class="mb-4">
                  <label class="form-label">Phone</label>
                  <input type="text"
                    class="block appearance-none w-full py-1 px-2 mb-1 text-base leading-normal bg-white text-gray-800 border border-gray-200 rounded"
                    value="+0 (123) 456 7891">
                </div>
                <div class="mb-4">
                  <label class="form-label">Website</label>
                  <input type="text"
                    class="block appearance-none w-full py-1 px-2 mb-1 text-base leading-normal bg-white text-gray-800 border border-gray-200 rounded"
                    value>
                </div>
              </div>
            </div>
            <div class="tab-pane opacity-0" id="account-social-links">
              <div class="flex-auto p-6 pb-2">
                <div class="mb-4">
                  <label class="form-label">Twitter</label>
                  <input type="text"
                    class="block appearance-none w-full py-1 px-2 mb-1 text-base leading-normal bg-white text-gray-800 border border-gray-200 rounded"
                    value="https://twitter.com/user">
                </div>
                <div class="mb-4">
                  <label class="form-label">Facebook</label>
                  <input type="text"
                    class="block appearance-none w-full py-1 px-2 mb-1 text-base leading-normal bg-white text-gray-800 border border-gray-200 rounded"
                    value="https://www.facebook.com/user">
                </div>
                <div class="mb-4">
                  <label class="form-label">Google+</label>
                  <input type="text"
                    class="block appearance-none w-full py-1 px-2 mb-1 text-base leading-normal bg-white text-gray-800 border border-gray-200 rounded"
                    value>
                </div>
                <div class="mb-4">
                  <label class="form-label">LinkedIn</label>
                  <input type="text"
                    class="block appearance-none w-full py-1 px-2 mb-1 text-base leading-normal bg-white text-gray-800 border border-gray-200 rounded"
                    value>
                </div>
                <div class="mb-4">
                  <label class="form-label">Instagram</label>
                  <input type="text"
                    class="block appearance-none w-full py-1 px-2 mb-1 text-base leading-normal bg-white text-gray-800 border border-gray-200 rounded"
                    value="https://www.instagram.com/user">
                </div>
              </div>
            </div>
            <div class="tab-pane opacity-0" id="account-connections">
              <div class="flex-auto p-6">
                <button type="button"
                  class="inline-block align-middle text-center select-none border font-normal whitespace-no-wrap rounded py-1 px-3 leading-normal no-underline btn-twitter">Connect
                  to
                  <strong>Twitter</strong></button>
              </div>
              <hr class="border-gray-100 m-0">
              <div class="flex-auto p-6">
                <h5 class="mb-2">
                  <a href="javascript:void(0)" class="float-right text-gray-700 text-tiny"><i
                      class="ion ion-md-close"></i>
                    Remove</a>
                  <i class="ion ion-logo-google text-google"></i>
                  You are connected to Google:
                </h5>
                <a href="/cdn-cgi/l/email-protection" class="__cf_email__"
                  data-cfemail="f9979498818e9c9595b994989095d79a9694">[email&#160;protected]</a>
              </div>
              <hr class="border-gray-100 m-0">
              <div class="flex-auto p-6">
                <button type="button"
                  class="inline-block align-middle text-center select-none border font-normal whitespace-no-wrap rounded py-1 px-3 leading-normal no-underline btn-facebook">Connect
                  to
                  <strong>Facebook</strong></button>
              </div>
              <hr class="border-gray-100 m-0">
              <div class="flex-auto p-6">
                <button type="button"
                  class="inline-block align-middle text-center select-none border font-normal whitespace-no-wrap rounded py-1 px-3 leading-normal no-underline btn-instagram">Connect
                  to
                  <strong>Instagram</strong></button>
              </div>
            </div>
            <div class="tab-pane opacity-0" id="account-notifications">
              <div class="flex-auto p-6 pb-2">
                <h6 class="mb-4">Activity</h6>
                <div class="mb-4">
                  <label class="switcher">
                    <input type="checkbox" class="switcher-input" checked>
                    <span class="switcher-indicator">
                      <span class="switcher-yes"></span>
                      <span class="switcher-no"></span>
                    </span>
                    <span class="switcher-label">Email me when someone comments on my article</span>
                  </label>
                </div>
                <div class="mb-4">
                  <label class="switcher">
                    <input type="checkbox" class="switcher-input" checked>
                    <span class="switcher-indicator">
                      <span class="switcher-yes"></span>
                      <span class="switcher-no"></span>
                    </span>
                    <span class="switcher-label">Email me when someone answers on my forum
                      thread</span>
                  </label>
                </div>
                <div class="mb-4">
                  <label class="switcher">
                    <input type="checkbox" class="switcher-input">
                    <span class="switcher-indicator">
                      <span class="switcher-yes"></span>
                      <span class="switcher-no"></span>
                    </span>
                    <span class="switcher-label">Email me when someone follows me</span>
                  </label>
                </div>
              </div>
              <hr class="border-gray-100 m-0">
              <div class="flex-auto p-6 pb-2">
                <h6 class="mb-4">Application</h6>
                <div class="mb-4">
                  <label class="switcher">
                    <input type="checkbox" class="switcher-input" checked>
                    <span class="switcher-indicator">
                      <span class="switcher-yes"></span>
                      <span class="switcher-no"></span>
                    </span>
                    <span class="switcher-label">News and announcements</span>
                  </label>
                </div>
                <div class="mb-4">
                  <label class="switcher">
                    <input type="checkbox" class="switcher-input">
                    <span class="switcher-indicator">
                      <span class="switcher-yes"></span>
                      <span class="switcher-no"></span>
                    </span>
                    <span class="switcher-label">Weekly product updates</span>
                  </label>
                </div>
                <div class="mb-4">
                  <label class="switcher">
                    <input type="checkbox" class="switcher-input" checked>
                    <span class="switcher-indicator">
                      <span class="switcher-yes"></span>
                      <span class="switcher-no"></span>
                    </span>
                    <span class="switcher-label">Weekly blog digest</span>
                  </label>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="text-right mt-3">
      <button type="button"
        class="inline-block align-middle text-center select-none border font-normal whitespace-no-wrap rounded py-1 px-3 leading-normal no-underline bg-blue-600 text-white hover:bg-blue-600">Save
        changes</button>&nbsp;
      <button type="button"
        class="inline-block align-middle text-center select-none border font-normal whitespace-no-wrap rounded py-1 px-3 leading-normal no-underline btn-default">Cancel</button>
    </div>
  </div>

  <script data-cfasync="false" src="/cdn-cgi/scripts/5c5dd728/cloudflare-static/email-decode.min.js"></script>
  <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/js/bootstrap.bundle.min.js"></script>
  <script type="text/javascript"></script>

  <script src="/app.js"></script>

  <%- include('partials/footer')%>